{
  "name": "opensafe",
  "version": "1.0.0",
  "description": "OpenSafe: A robust, production-ready AI and API safety/security platform.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run build:rust",
    "build:rust": "cd native && cargo build --release",
    "build:prod": "NODE_ENV=production npm run build",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "jest --config jest.e2e.config.js --runInBand",
    "test:load": "node tests/load/production-load.js",
    "test:safety": "jest tests/unit/safety.test.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "lint": "eslint src --ext .ts",
    "lint:check": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "docker:build": "docker build -t opensafe/core .",
    "docker:run": "docker run -p 8080:8080 opensafe/core",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up -d",
    "migrate": "node scripts/migrate.js",
    "migrate:dev": "NODE_ENV=development npm run migrate",
    "migrate:prod": "NODE_ENV=production npm run migrate",
    "seed": "node scripts/seed.js",
    "db:reset": "npm run migrate && npm run seed",
    "benchmark": "node scripts/benchmark.js",
    "profile": "node --prof scripts/profile.js",
    "profile:memory": "node --inspect scripts/memory-benchmark.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run security:audit && snyk test",
    "docs:build": "typedoc --out docs/api src",
    "docs:serve": "http-server docs/api -p 3001",
    "clean": "rimraf dist coverage .nyc_output",
    "precommit": "npm run lint && npm run type-check && npm run test:unit",
    "prepush": "npm run test:all && npm run security:audit",
    "release:patch": "npm version patch && git push --tags",
    "release:minor": "npm version minor && git push --tags",
    "release:major": "npm version major && git push --tags",
    "health": "curl -f http://localhost:8080/health || exit 1",
    "logs": "docker-compose logs -f",
    "cli": "node dist/cli/index.js"
  },
  "keywords": [
    "ai-security",
    "ai-validation",
    "constitutional-ai",
    "openai",
    "content-moderation",
    "security-analysis",
    "typescript",
    "rust",
    "production-ready",
    "enterprise",
    "monitoring",
    "research",
    "bias-detection",
    "harmful-content",
    "privacy-protection"
  ],
  "author": {
    "name": "OpenSafe Team",
    "email": "team@opensafe.ai",
    "url": "https://opensafe.ai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/opensafe/core.git"
  },
  "bugs": {
    "url": "https://github.com/opensafe/core/issues",
    "email": "bugs@opensafe.ai"
  },
  "homepage": "https://github.com/opensafe/core#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "native/target/release",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "bcrypt": "^5.1.1",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "node-addon-api": "^7.1.0",
    "openai": "^4.28.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "sharp": "^0.33.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
    "snyk": "^1.1274.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run type-check",
      "pre-push": "npm run test:unit"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 8,
        "lines": 15,
        "statements": 15
      }
    }
  },
  "config": {
    "rust_target": "release"
  }
}
