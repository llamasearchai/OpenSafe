{
  "name": "@openai-safe/core",
  "version": "1.0.0",
  "description": "Production-grade AI Safety Research and Deployment Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:rust": "cd native && cargo build --release",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:coverage": "jest --coverage --collectCoverageFrom='src/**/*.{ts,tsx}'",
    "test:watch": "jest --watch",
    "test:safety": "jest --testPathPattern=safety --coverage",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "docker:build": "docker build -t openai-safe .",
    "docker:run": "docker run -p 8080:8080 openai-safe",
    "db:migrate": "node -e \"require('./dist/models/database').initializeDatabase()\"",
    "db:migrate:test": "NODE_ENV=test node -e \"require('./dist/models/database').initializeDatabase()\"",
    "db:seed": "node dist/scripts/seed.js",
    "db:seed:test": "NODE_ENV=test node dist/scripts/seed.js",
    "benchmark": "node scripts/benchmark.sh",
    "security": "npm audit --audit-level=high",
    "docs": "typedoc src --out docs/api",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.28.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openai-safe/platform.git"
  },
  "keywords": [
    "ai",
    "safety",
    "openai",
    "constitutional-ai",
    "interpretability",
    "research",
    "platform"
  ],
  "author": "OpenAI Safe Team",
  "bugs": {
    "url": "https://github.com/openai-safe/platform/issues"
  },
  "homepage": "https://github.com/openai-safe/platform#readme"
}
